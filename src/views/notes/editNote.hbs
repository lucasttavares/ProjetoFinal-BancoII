<div id="form">
    <h2>Editar Nota</h2>
    <form action="/notes/edit/{{note.id}}?_method=PUT" method="post">
        <input name="titulo" type="text" value="{{note.titulo}}">
        <textarea name="descricao">{{note.descricao}}</textarea>
        <input name="data" type="text" value="{{ note.data }}">
        <select name="tipo">
            <option selected> {{note.tipo}}</option>
            <option value="Urgente">Urgente</option>
            <option value="Atenção">Atenção</option>
            <option value="Comum">Comum</option>
        </select>
        <button>Salvar</button>
    </form>
</div>